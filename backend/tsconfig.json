{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./public",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/server.ts"],
  "exclude": ["node_modules"]
}
